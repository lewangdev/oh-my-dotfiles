# Interactive operation...
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Default to human readable figures
alias df='df -h'
alias du='du -h'

# Misc :)
alias less='less -r'                          # raw control characters
alias whence='type -a'                        # where, of a sort
alias grep='grep --color'                     # show differences in colour
alias egrep='egrep --color=auto'              # show differences in colour
alias fgrep='fgrep --color=auto'              # show differences in colour

# aliases for tmux
alias tn="tmux new -s"
alias ta="tmux a -t"

# aliases for git
alias gd="git diff | tig"

# aliases for ps
alias 'ps?'='ps aux | grep'

# alias for ping
alias p="ping"


# some commands
alias wltmuxenv="~/.dotfiles/tmuxenv.sh"
alias wlgoagent='~/Workspace/app/goagent/local/goagent-osx.command'
alias wlkindlegen='~/Workspace/app/kindlegen/kindlegen'

# some commands shortcut
alias wlssh1txdn="ssh le@mysql.1txdn.com"
alias wlsshlinode="ssh le@www.diggcool.com"
